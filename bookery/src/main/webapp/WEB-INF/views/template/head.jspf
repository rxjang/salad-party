<style>
	/**** 크롬 자동포커스 아웃라인, 자동 배경색 채우기 해제 ****/
	textarea:focus { outline: none; } 
	.btn-default:focus,
	.btn-default.focus,
	.btn.focus,.btn:focus,.btn:hover,
	.btn-default:hover,
	.btn:active.focus,.btn:active:focus
	 { border:0px; outline: none; } 

	input,button{
		outline-style: none;
	}
	input:-webkit-autofill,
	   input:-webkit-autofill:hover,
	   input:-webkit-autofill:focus,
	   input:-webkit-autofill:active {
	 transition: background-color 5000s ease-in-out 0s;
	 -webkit-transition: background-color 9999s ease-out;
	    -webkit-box-shadow: 0 0 0px 1000px white inset !important;
	    -webkit-text-fill-color: black !important;
	  }
	/******************************		크롬	****************************/

.bottom-line{
	/**** 페이지 밑 줄
		div class = col-md-12 col-xs-12 bottom-line 으로 사용하면
		화면 전체 가로지르는 밑줄 그을 수 있다. 
	****/
	margin-top:20px;
	margin-bottom:20px;
	border-bottom:1px solid #e4e4e4;
}

 	#menu{
 		height:66px;
		line-height:40px;
		border-bottom: 1px solid #e4e4e4;
		font-size: 1.3em;
	 	background-color:white;
	 	position:fixed;
	 	top:0;
	 	width:100%;
	 	z-index:10;
	}
	#menu a,.sub-menu a{color:black;}
	#menu a:hover, .sub-menu a:hover{
		text-decoration:none;
		background-color: rgba(255, 0, 0, 0.0) !important;/*기존 부트스트랩 색깔 투명하게 설정*/
	}
	#menu ul{padding:4px 0px;}
	.nav li{float:left;}
	.real-menu{padding:0px;} 
	.menu-setting{padding-left:80px;}/*좌측 적당한 공간 띄움*/
	.pull-right{padding:23px 80px;}
	.jung{color:white;}/*#처음에 안보이게*/
	.dropdown-toggle:active, .open .dropdown-toggle {
		position:absoulte;
		right:0px;
        background:white !important; 
        color:#000 !important;
		text-decoration: none;
    }
    .dropdown-menu{/*드롭다운 메뉴 이동 방지*/
    	right:90;
    	left:auto;
    }
    #footer{
    	position:sticky;
		border-top: 1px solid #e4e4e4;
		background-color:white;
		z-index:8;
    }
    .footer-title{
    	font-size:1.3em;
    	font-weight:bold;
    	padding-top:15px;
    }
	.footer-content{padding-left:65px; padding-bottom:15px;}/*좌측 적당한 공간 띄움*/
    /*******************서브메뉴 CSS*******************/
    .sub-menu{
    	display:inline-block;
    	top:66px;
    	height:44px;
		border-bottom: 1px solid #e4e4e4;
		background-color:white;
		position:fixed;
		top:66px;
		z-index:9;
		width:100%
    }
    .mylib-menu{left:25%;}
    .feed-menu{left:42%;}
    /************메뉴 상단 고정을 위해 컨텐츠 위치 조절******************/
	.main{
		position: -webkit-sticky; /* 사파리 브라우저 지원 */
	    position: sticky;
	    top: 66px;
	   	margin-bottom:120px;
	}
    /************서브메뉴가 있는 경우의 CSS******************/
	.submenu-main{
		position: -webkit-sticky; /* 사파리 브라우저 지원 */
	    position: sticky;
	    margin-top:110px;
	    margin-bottom:120px;
	}
    
	@media (max-width:1000px) {/*중간 이하 화면용 CSS*/
		#menu{
			height:50px;
			border-bottom:0px;
		}
		.menu-setting{padding:0px 25px;}
		.pull-right{padding:23px 25px;}
		.real-menu{
			position:fixed;
			bottom:0;
			border-top:1px solid #e4e4e4;
			height:66px;
			background-color:white;
			z-index:10;
    		text-align:center;
		}
		.add-jung{font-size:0.7em;}
		.menu-icon{
			padding-top:5px;
			font-size:1.7em;
		}
		.dropdown-menu{/*드롭다운 메뉴 이동 방지*/
    		right:35;
    		left:auto;
    	}
 	   .real-menu li{
 	   		float:none;
 	   		display:inline-block;
 	   		margin:0 2.8%;
 	   }
		.real-menu li>a {
			padding-top:0px;
			display: block;
		}
	    /*******************모바일 서브메뉴 CSS*******************/
    	.sub-menu{
			border-bottom: 0px;
			line-height:1.5em;
			height:40px;
			top:50px;
 	   }
 	   .main{
 	   		top:50px;
 	   		 margin-bottom:180px;
 	   }
 	   .submenu-main{
 	   		margin-top:90px;
 	   		margin-bottom:200px;
 	   }
 	   #footer{margin-bottom:80px;}
 	   .footer-content{padding-left:25px; padding-bottom:10px;}/*좌측 적당한 공간 띄움*/
 	   .mylib-menu, .feed-menu{left:auto;}/**pc버전의 left속성 없앰**/
	}
	
	@media (max-width:800px) {/**모바일 위한 CSS-서브메뉴 간격 조절**/
 	   .real-menu li{margin:0 0.7%;}
 	   body{font-size: 1.2em;}
	}
</style>
<script type="text/javascript">
var mql = window.matchMedia("screen and (max-width: 1000px)");

mql.addListener(function(e) {
    if(e.matches) {
    	mobile();
    } else {
    	pc();
    }
});//넓이 변경시 이벤트 발생

$(function(){
	  $('.add-jung').mouseenter(function(){
	    $(this).children(".jung").css('color','black');
		$(this).css('font-weight','bold');
		$(this).prev().css('font-weight','bold');
	  });
	  $('.add-jung').mouseleave(function(){
	    $(this).children(".jung").css('color','white');
	    $(this).css('font-weight','normal').css('background-color','none');
		$(this).prev().css('font-weight','normal');
	  });
	  
	  $(".nav li").click( function() { 
          $(this).css("background-color", "rgba(255, 0, 0, 0.0)");
       });
		
		if (mql.matches) {
		    mobile();
		} else {
			pc()
		}//최초 접속 상태로 판단

});//function
	 
	
function mobile(){
	$('.jung').text('');
	$( ".menu-today" ).prepend( "<span class=\"menu-icon glyphicon glyphicon-pencil\"></span><br/>" );
	$( ".menu-mylib" ).prepend( "<span class=\"menu-icon glyphicon glyphicon-book\"></span><br/>" );
	$( ".menu-club" ).prepend( "<span class=\"menu-icon glyphicon glyphicon-link\"></span><br/>" );
	$( ".menu-find" ).prepend( "<span class=\"menu-icon glyphicon glyphicon-search\"></span><br/>" );
	$( ".menu-feed" ).prepend( "<span class=\"menu-icon glyphicon glyphicon-comment\"></span><br/>" );
	$( ".add-jung" ).css("color","#666666");
}
function pc(){
	$('.jung').text('#');
	$('.menu-icon').remove();
	$('.add-jung').children('br').remove();
	$( ".add-jung" ).css("color","black");
}

</script>
